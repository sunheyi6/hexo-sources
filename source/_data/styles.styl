// 碎碎念页面样式
.memos-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.memos-content {
  min-height: 400px;
}

.memos-loading {
  text-align: center;
  padding: 100px 0;
  color: #666;
}

.memos-header {
  text-align: center;
  margin-bottom: 30px;
  
  h2 {
    font-size: 28px;
    color: #333;
    margin-bottom: 10px;
  }
  
  .memos-subtitle {
    color: #666;
    font-size: 16px;
  }
}

.memos-list {
  margin-bottom: 30px;
}

.memo-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  position: relative;
  
  &:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(0, 0, 0, 0.008) 2px,
        rgba(0, 0, 0, 0.008) 4px
      );
    pointer-events: none;
    z-index: 0;
  }
}

.memo-time {
  font-size: 14px;
  color: #999;
  margin-bottom: 10px;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
}

.memo-content {
  font-size: 16px;
  line-height: 1.6;
  color: #333;
  margin-bottom: 15px;
  position: relative;
  z-index: 1;
  
  a {
    color: #3498db;
    text-decoration: none;
    border-bottom: 1px solid rgba(52, 152, 219, 0.3);
    
    &:hover {
      color: #2980b9;
      border-bottom-color: #2980b9;
    }
    
    &:visited {
      color: #9b59b6;
    }
  }
}

.memo-image {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  margin: 10px 0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.memo-tags {
  margin-top: 10px;
  position: relative;
  z-index: 1;
}

.memo-tag {
  display: inline-block;
  padding: 4px 10px;
  background: rgba(52, 152, 219, 0.1);
  color: #3498db;
  border-radius: 12px;
  font-size: 12px;
  margin-right: 8px;
  margin-bottom: 8px;
}

.memos-footer {
  text-align: center;
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #eee;
}

.memo-button {
  background: var(--bg-color);
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 10px 20px;
  font-size: 14px;
  color: #333;
  cursor: pointer;
  transition: all 0.3s ease;
  
  &:hover {
    background: var(--bg-light);
    border-color: #ccc;
  }
}

.memos-hint {
  margin-top: 15px;
  font-size: 12px;
  color: #999;
  line-height: 1.4;
}

.memos-error {
  text-align: center;
  padding: 50px 0;
  color: #666;
  
  h3 {
    color: #e74c3c;
    margin-bottom: 10px;
  }
  
  pre {
    background: #f8f9fa;
    padding: 10px;
    border-radius: 6px;
    margin: 15px 0;
    font-size: 12px;
    text-align: left;
    overflow-x: auto;
  }
}

// 响应式调整
@media (max-width: 768px) {
  .memos-container {
    padding: 15px;
  }
  
  .memo-item {
    padding: 15px;
  }
  
  .memo-content {
    font-size: 15px;
  }
  
  .memos-header h2 {
    font-size: 24px;
  }
}
