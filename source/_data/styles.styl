.text-center {
  text-align: center;
}

.site-author-image {
  background: white;
  background-clip: content-box;
}

.sidebar .sidebar-button {
  &:not(:last-child) {
    margin-bottom: 15px;
  }

  a {
    button($orange);
    border: 1px solid $orange;
    border-radius: 4px;
    // To make line-height in button mixin work
    display: inline-block;

    .fa, .fab, .far, .fas {
      margin-right: 5px;
    }

    if (($scheme == 'Pisces') or ($scheme == 'Gemini')) {
      border: 0;
      color: $orange;
      display: block;

      &:hover {
        background: none;
        border: 0;
        color: darken($orange, 20%);
      }
    }
  }
}

// 纸质书风格
:root {
  --paper-color: #faf8f5;
  --paper-light: #f5f3f0;
  --paper-dark: #f0ede8;
}

// 纸质书背景
body {
    background: linear-gradient(135deg, var(--paper-color) 0%, var(--paper-light) 50%, var(--paper-dark) 100%) !important;
    background-attachment: fixed !important;
    background-repeat: no-repeat !important;
    background-size: cover !important;
    background-position: 50% 50% !important;
    font-size: 18px;
    // 纸质纹理效果
    position: relative;
    
    &:before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        repeating-linear-gradient(
          0deg,
          transparent,
          transparent 2px,
          rgba(0, 0, 0, 0.005) 2px,
          rgba(0, 0, 0, 0.005) 4px
        );
      pointer-events: none;
      z-index: 0;
    }
}

// 文章内容纸质效果
.post-block {
  background: rgba(255, 255, 255, 0.85) !important;
  opacity: 1;
  position: relative;
  
  &:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(0, 0, 0, 0.008) 2px,
