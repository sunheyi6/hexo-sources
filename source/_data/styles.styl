// 碎碎念页面时间线风格样式

.memos-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.memos-header {
  text-align: center;
  margin-bottom: 40px;
  
  h2 {
    font-size: 28px;
    color: #333;
    margin-bottom: 10px;
  }
  
  .memos-subtitle {
    color: #666;
    font-size: 16px;
  }
}

.memos-list {
  position: relative;
  
  // 时间线竖线
  &:before {
    content: '';
    position: absolute;
    left: 20px;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: #eaeaea;
  }
}

.memo-item {
  position: relative;
  padding-left: 60px;
  margin-bottom: 40px;
  padding: 20px;
  border: 1px solid #eaeaea;
  border-radius: 12px;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  
  &:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }
  
  // 时间点
  &:before {
    content: '';
    position: absolute;
    left: 14px;
    top: 28px;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background-color: #007bff;
    border: 3px solid #fff;
    box-shadow: 0 0 0 2px #007bff;
    z-index: 1;
  }
}

.memo-time {
  font-size: 14px;
  color: #999;
  margin-bottom: 12px;
  font-family: 'Courier New', monospace;
}

.memo-content {
  font-size: 16px;
  line-height: 1.6;
  color: #333;
  margin-bottom: 16px;
  
  p {
    margin-bottom: 12px;
  }
  
  a {
    color: #007bff;
    text-decoration: none;
    
    &:hover {
      text-decoration: underline;
    }
  }
}

.memo-image {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  margin: 16px 0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  
  &:hover {
    transform: translateY(-2px);
  }
}

.memo-actions {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  font-size: 14px;
  
  .action-item {
    display: flex;
    align-items: center;
    margin-right: 24px;
    color: #666;
    cursor: pointer;
    transition: color 0.3s ease;
    
    &:hover {
      color: #007bff;
    }
    
    i {
      margin-right: 6px;
    }
  }
}

.memo-share {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #666;
  
  .share-label {
    margin-right: 12px;
  }
  
  .share-icons {
    display: flex;
    gap: 12px;
    
    .share-icon {
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      background-color: #f5f5f5;
      color: #666;
      cursor: pointer;
      transition: all 0.3s ease;
      
      &:hover {
        background-color: #e0e0e0;
        transform: translateY(-2px);
      }
    }
  }
}

.memo-tags {
  margin-top: 12px;
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  
  .memo-tag {
    display: inline-block;
    padding: 4px 12px;
    background-color: #f0f4f8;
    color: #3498db;
    border-radius: 16px;
    font-size: 12px;
    transition: all 0.3s ease;
    
    &:hover {
      background-color: #e1ebf5;
    }
  }
}

.memos-footer {
  text-align: center;
  margin-top: 40px;
  padding-top: 20px;
  border-top: 1px solid #eee;
}

.memo-button {
  background-color: #007bff;
  border: none;
  border-radius: 20px;
  padding: 10px 24px;
  font-size: 14px;
  color: white;
  cursor: pointer;
  transition: all 0.3s ease;
  
  &:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
  }
}

.memos-hint {
  margin-top: 16px;
  font-size: 12px;
  color: #999;
}

.memos-loading {
  text-align: center;
  padding: 80px 0;
  color: #666;
  
  i {
    font-size: 24px;
    margin-bottom: 16px;
    animation: spin 1s linear infinite;
  }
}

.memos-error {
  text-align: center;
  padding: 60px 0;
  color: #666;
  
  h3 {
    color: #dc3545;
    margin-bottom: 16px;
  }
  
  pre {
    background-color: #f8f9fa;
    padding: 16px;
    border-radius: 8px;
    margin: 20px 0;
    font-size: 12px;
    text-align: left;
    overflow-x: auto;
    border: 1px solid #e9ecef;
  }
}

// 响应式调整
@media (max-width: 768px) {
  .memos-container {
    padding: 15px;
  }
  
  .memo-item {
    padding-left: 50px;
  }
  
  .memos-header h2 {
    font-size: 24px;
  }
  
  .memo-content {
    font-size: 15px;
  }
  
  .memo-actions {
    flex-wrap: wrap;
    gap: 12px;
    
    .action-item {
      margin-right: 16px;
    }
  }
  
  .memo-share {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
    
    .share-label {
      margin-right: 0;
    }
  }
}

// 动画
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

// 代码高亮样式
pre {
  background-color: #f8f9fa;
  border-radius: 8px;
  padding: 16px;
  margin: 16px 0;
  overflow-x: auto;
  border: 1px solid #e9ecef;
  
  code {
    font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
    font-size: 14px;
  }
}

code {
  font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
  font-size: 0.9em;
  background-color: #f0f0f0;
  padding: 2px 6px;
  border-radius: 4px;
  color: #dc3545;
}
